<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Form_1.Form13">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="System state on arrival"
                android:textColor="#000"
                android:textSize="22sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:padding="16dp">

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText


                            android:id="@+id/ssNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|top"
                            android:hint="Note"
                            android:minLines="2"
                            android:textColor="#000"
                            android:textColorHint="#787878"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Pressure Test"
                android:textColor="#000"
                android:textSize="22sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/seatNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:hint="Set No"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="#787878"

                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <CheckBox
                        android:id="@+id/cbThread"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tested as per instructions on"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cbAirTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Air test(2.5 bar for 24 hours)"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cbWetTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wet test(15 bar for 2 hours)"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cbStandingPressure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Standing pressure"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/standingPressureBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:hint="bar"
                                android:singleLine="true"
                                android:textColor="#000"
                                android:textColorHint="#787878"

                                android:textSize="16sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/reasonSpecialTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="reason for special test: client instruction extension to old system"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/specialTest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Special test"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText

                                android:id="@+id/specialTestBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:hint="bar"
                                android:singleLine="true"
                                android:textColor="#000"
                                android:textColorHint="#787878"

                                android:textSize="16sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText

                                android:id="@+id/specialTestHour"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:hint="hours"
                                android:singleLine="true"
                                android:textColor="#000"
                                android:textColorHint="#787878"

                                android:textSize="16sp" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/primaryColorDark">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="BACK"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="NEXT"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>

